.row
  .col-sm-8.col-sm-offset-2
    %h1.page-header
      Add new quote
    = simple_form_for @quote do |f|
      = f.input :author
      = f.input :content, input_html: { rows: 7 }

      = f.submit "Submit Quote", class: "btn btn-primary btn-lg"
      = link_to("Go Back", root_path, class: "btn btn-default btn-lg pull-right")
